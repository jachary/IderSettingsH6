<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".upgrade.UpgradeActivity"
    android:paddingLeft="@dimen/setting_content_padlr"
    android:paddingRight="@dimen/setting_content_padlr"
    android:paddingTop="@dimen/setting_content_padtb"
    android:paddingBottom="@dimen/setting_content_padtb"
    >
   	<!-- Header -->
   	<LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal" >
    	
		 <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/viewpager_icon_h"
            android:drawableLeft="@drawable/settings_icon"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/viewpager_left"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_title_size" >
        </TextView>

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right" />
        
    	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upgrade_title"
        android:textSize="@dimen/setting_title_size"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        />

    </LinearLayout>
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_head_line"
        android:visibility="gone"/>
    <!-- Content -->
    <LinearLayout
       	android:layout_width="match_parent"
       	android:layout_height="match_parent"
       	android:orientation="vertical"
       	android:layout_gravity="center_horizontal"
       	android:gravity="center_horizontal">
   
	    <ListView
	        android:id="@id/list_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:cacheColorHint="@android:color/transparent"
	        android:listSelector="@drawable/setting_list_focus"
	        android:divider="@drawable/setting_listview_split"
	        android:layout_marginTop="@dimen/setting_list_pad"
	       android:visibility="gone" />
	    <TextView 
	        android:id="@+id/upgrade_txt_update"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:textSize="@dimen/setting_list_size"
        	android:textColor="@android:color/white"
        	android:layout_marginTop="@dimen/upgrade_list_margin"
        	android:visibility="gone"/>
	    <ProgressBar
	        android:id="@+id/upgrade_progress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:progressDrawable="@drawable/upgrade_progress_horizontal"
	        android:layout_marginTop="@dimen/upgrade_list_margin"
	        android:progress="0"
	        android:max="100"
	        android:visibility="gone"
	        />
	    <Button
	        android:id="@+id/upgrade_btn_upgrade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/upgrade_version_update"
	        android:text="@string/upgrade_version_detect"
        	android:textSize="@dimen/setting_list_size"
        	android:textColor="@android:color/white"
        	android:layout_marginTop="@dimen/upgrade_list_margin"
	        android:visibility="gone"/>
 	<LinearLayout 
     android:id="@+id/updateider"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     android:focusable="true"
     android:layout_marginTop="20dp"
      android:background="@drawable/my_bgbg">
     <ImageView 
         android:id="@+id/updateimage1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_launcher"
         android:layout_marginLeft="20dp"
         />
     <TextView 
         android:id="@+id/updatetext1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#FFFFFF"
         android:textSize="25sp"
         android:text="@string/upgrade_version"
         android:layout_marginLeft="20dp"
         />
 </LinearLayout> 
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_head_line"/>   
  <LinearLayout 
     android:id="@+id/updateapp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     android:focusable="true"
      android:background="@drawable/my_bgbg"
     >
     <ImageView 
         android:id="@+id/updateimage2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ai_update"
         android:layout_marginLeft="20dp"
         />
     <TextView 
         android:id="@+id/updatetext2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:textColor="#FFFFFF"
         android:textSize="25sp"
         android:text="@string/update_version"
         />
 </LinearLayout>  
 	</LinearLayout>
</LinearLayout>
