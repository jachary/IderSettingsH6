<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".language.LanguageActivity"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:minHeight="@dimen/setting_list_height">
	
    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/setting_list_pad"
        android:layout_centerVertical="true"/>
    
    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/setting_list_size"
        android:paddingLeft="@dimen/setting_list_pad"
        android:layout_toRightOf="@id/list_icon"
        android:layout_centerVertical="true"/>
    
</RelativeLayout>
