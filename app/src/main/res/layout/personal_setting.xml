<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/setting_content_padlr"
    android:paddingRight="@dimen/setting_content_padlr"
    android:paddingTop="@dimen/setting_content_padtb"
    android:paddingBottom="@dimen/setting_content_padtb"
    android:orientation="vertical" >

    <!-- Header -->
   	<LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal" >
    	
		 <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/viewpager_icon_h"
            android:drawableLeft="@drawable/settings_icon"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/viewpager_left"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="30sp" >
        </TextView>

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right" />
        
    	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_name"
        android:textSize="@dimen/setting_title_size"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"/>

    </LinearLayout>
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_head_line"/>

	<TextView android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="0.7"/>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="4"
		android:layout_marginTop="30dip"
		android:orientation="horizontal"
		android:gravity="center"
		>
		
		<TextView android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="0.5"/>

		

		<Button android:id="@+id/dlna_name"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1.8"
			android:text="@string/dlna_name"
			android:textSize="30dp"
			android:textColor="#ffffffff"
			android:onClick="onClick"
			android:focusable="true"
			android:background="@drawable/button"
			android:drawableTop="@drawable/dlna_icon"
			android:gravity="center"
			android:paddingTop="40dip"
			android:paddingBottom="10dip"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
		/>
		<TextView android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="0.2"/>
		<LinearLayout android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:background="@drawable/button"
			android:orientation="vertical">
		  <LinearLayout android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.8"
			android:layout_marginTop="0dip"
		    
		    android:gravity="center">
		   <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dl_sui"
			android:textSize="25dp"
			android:textColor="#ffffff"
			android:gravity="center"
			/>
		   </LinearLayout>
		   <LinearLayout android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="4"
			android:layout_marginTop="0dip"
		    android:orientation="horizontal"
		    android:gravity="center">
		    <LinearLayout android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="0dip"
			android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center">
		    <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="25dp"
			android:textColor="#ffffff"
			android:gravity="center_horizontal"
			android:text="@string/android_d"/>
			<ImageView	
	    	android:layout_width="121dp"    		
	    	android:layout_height="121dp" 
	    	android:scaleType="fitXY"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_marginLeft="20dip" 
	    	android:layout_marginRight="20dip" 
	    	android:src="@drawable/suixinkong2"/>
			</LinearLayout>
			<LinearLayout android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="0dip"
			android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center">
		    <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="25dp"
			android:textColor="#ffffff"
			android:gravity="center_horizontal"
			android:text="@string/ios_d"/>
			<ImageView	
	    	android:layout_width="121dp"    		
	    	android:layout_height="121dp" 
	    	android:scaleType="fitXY"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_marginLeft="20dip" 
	    	android:layout_marginRight="20dip" 
	    	android:src="@drawable/ios_suixinkong"/>
			</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="4.1"
			android:layout_marginTop="0dip"
		    android:orientation="vertical"
		    >
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22dp"
			android:gravity="left"
			android:textColor="#ffffff"
			android:text="@string/no1"/>
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			
			android:text="@string/notic1"/>
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22dp"
			android:gravity="left"
			android:textColor="#ffffff"
			android:text="@string/no2"/>
			<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dp"
			
			android:text="@string/notic2"/>
			</LinearLayout>
			
            
		 
		 </LinearLayout>
		<TextView android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="0.5"/>
		
		
	</LinearLayout>

	
	<TextView android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="0.6"/>
</LinearLayout>
