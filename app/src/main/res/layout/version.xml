<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/setting_content_padlr"
    android:paddingRight="@dimen/setting_content_padlr"
    android:paddingTop="@dimen/setting_content_padtb"
    android:paddingBottom="@dimen/setting_content_padtb"
    android:orientation="vertical" >
    
	<!-- Header -->
   	<LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal" >
    	
		 <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/viewpager_icon_h"
            android:drawableLeft="@drawable/settings_icon"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/viewpager_left"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="30sp" >
        </TextView>

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right" />
        
    	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/devices_info"
        android:textSize="@dimen/setting_title_size"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"/>

    </LinearLayout>
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_head_line"/>  

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="4.1"
		android:paddingTop="35px"
		android:layout_marginLeft="70dip"
		android:layout_marginRight="70dip"
		android:orientation="vertical"
		android:gravity="center_horizontal">
		
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			
	    <ImageView
	        android:id="@+id/imageView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
	        android:src="@drawable/product_model" />			
	
			<TextView android:id="@+id/mode_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/devicesversion"
				android:layout_weight="1"
				android:layout_gravity="right|center_vertical"
				android:paddingLeft="@dimen/setting_list_pad"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>

			<TextView android:id="@+id/versiondevices"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="4.5"
				android:gravity="right|center_vertical"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>
		</LinearLayout>
		
	    <ImageView
	        android:id="@+id/imageView_line0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/setting_listview_split" />	

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:orientation="horizontal">
			
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
	        android:src="@drawable/android_version" />
	
			<TextView android:id="@+id/android_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/androidversion"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:paddingLeft="@dimen/setting_list_pad"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>

			<TextView android:id="@+id/versionandroid"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="4.5"
				android:gravity="right|center_vertical"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>
		</LinearLayout>
		
	    <ImageView
	        android:id="@+id/imageView_line1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/setting_listview_split" />	

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:orientation="horizontal">
			
	    <ImageView
	        android:id="@+id/imageView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
	        android:src="@drawable/kernel_version" />
	
			<TextView android:id="@+id/kernel_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/kernelversion"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:paddingLeft="@dimen/setting_list_pad"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>

			<TextView android:id="@+id/versionkernel"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="4.5"
				android:gravity="right|center_vertical"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>
		</LinearLayout>

	    <ImageView
	        android:id="@+id/imageView_line2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/setting_listview_split" />	
	        
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:orientation="horizontal">
			
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
	        android:src="@drawable/build_version" />
	
			<TextView android:id="@+id/build_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/versionnumber"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:paddingLeft="@dimen/setting_list_pad"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>

			<TextView android:id="@+id/numberversion"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="4.5"
				android:gravity="right|center_vertical"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>
		</LinearLayout>
		<ImageView
	        android:id="@+id/imageView_line3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/setting_listview_split" />	
	        
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:orientation="horizontal">
			
	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
	        android:src="@drawable/android_version" />
	
			<TextView android:id="@+id/build_title3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="UUID"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:paddingLeft="@dimen/setting_list_pad"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>

			<TextView android:id="@+id/numberversion3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="4.5"
				android:gravity="right|center_vertical"
				android:textSize="1dp"
				android:textColor="#FFFFFFFF"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
